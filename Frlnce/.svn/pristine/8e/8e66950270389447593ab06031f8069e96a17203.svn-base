    padding: 1px;
    color: #000000;
}

.login .main-content {
    margin-top: -20px;
    margin-left: 10px;
    margin-right: 10px;
    padding: 5px;
    background-color: white;
    -webkit-box-shadow: 0px 0px 55px -16px rgba(0, 0, 0, 0.75);
    box-shadow: 0px 0px 55px -16px rgba(0, 0, 0, 0.75);
    position: relative !important;
}

.login .item-inner {
    padding-right: 8px;
    border-bottom: 1px solid #dedede;
}
.login .item-inner .form-control {
	border:none;
	box-shadow:none;
}

.login .forgetpwd_link{
   text-align:right;
    padding: 5px 15px;
	width:100%;
}

.login .or{
   	width:100%;
}
.login .strike {
    display: block;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
}

.login .strike > span::before {
    right: 50%;
    margin-right: 15px;
}
.login .strike > span::before, .login .strike > span::after {
    content: "";
    position: absolute;
    top: 60%;
    width: 9999px;
    height: 1px;
    background: #488aff;
	width:44%;
	margin-top:7px;
}

.login .strike > span::after {
    left: 50%;
    margin-left: 15px;
}
