.loading {
    position: fixed;
    z-index: 9999999;
    height: 2em;
    width: 2em;
    overflow: visible;
    margin: auto;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }
  
  .loading:before {
    content: '';
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
  }

  .loading.dark:before {
    background-color: #eee !important;
  }
  
  
.loading span{
    width: 150px;
    background:#f6f6f6;
    padding: 10px 0px 0px 0px;
    z-index: 99999;
    position: absolute;
    box-shadow: 2px 2px 2px #888;
    display: block;
    margin-left: -50px;
    text-align: center;
}

.loading.dark span {
  background-color: transparent !important;
  box-shadow:none !important;
}

.loading .content{
    padding: 10px 4px 4px 4px;
    color: #444;
    font-size: 1.3rem;
    display : inline-block;
    width: 100%;
}

.css-z3kss3 {
    display: inline-block;
}



.loading.blue span {
  position: absolute;
  height: 10px;
  width: 84px;
  top: 50px;
  overflow: hidden;
}

.loading.blue .content{
  color: #fff;
  position: absolute;
  width: 150px;
  margin-left:-40px;
  margin-top: -50px;
}

.loading.blue:before {
  background-color: #444349 !important;
}

.loading.blue a > i {
  position: absolute;
  height: 10px;
  width: 10px;
  border-radius: 50%;
  -webkit-animation: wait 4s infinite;
  -moz-animation: wait 4s infinite;
  -o-animation: wait 4s infinite;
  animation: wait 4s infinite;
}
.loading.blue a > i:nth-of-type(1) {
  left: -28px;
  background: yellow;
}
.loading.blue a > i:nth-of-type(2) {
  left: -21px;
  -webkit-animation-delay: 0.8s;
  animation-delay: 0.8s;
  background: lightgreen;
}

.loading.blue a > i:nth-of-type(3) {
  left: -14px;
  -webkit-animation-delay: 0.16s;
  animation-delay: 0.16s;
  background: red;
}


@-webkit-keyframes wait {
  0%   { left: -7px  }
  30%  { left: 52px  }
  60%  { left: 22px  }
  100% { left: 100px }
}
@-moz-keyframes wait {
  0%   { left: -7px  }
  30%  { left: 52px  }
  60%  { left: 22px  }
  100% { left: 100px }
}
@-o-keyframes wait {
  0%   { left: -7px  }
  30%  { left: 52px  }
  60%  { left: 22px  }
  100% { left: 100px }
}
@keyframes wait {
  0%   { left: -7px  }
  30%  { left: 52px  }
  60%  { left: 22px  }
  100% { left: 100px }
}